//
// Mixins
// --------------------------------------------------

group()
	border: thick 1px solid transparent
	overflow: hidden


// Grid
//----------------------

span($columns)
	width: ($grid_column_width * $columns) + (($grid_column_margin * 2) * ($columns - 1))

margin_left($columns)
	margin-left: ($grid_column_width * $columns) + (($grid_column_margin * 2) * ($columns - 1)) + ($grid_column_margin * 2)

centered($columns)
	margin: 0 (($grid_row_width - (($grid_column_width * $columns) + (($grid_column_margin * 2) * ($columns - 1))))/2)

span_fluid($columns)
	width: (((($grid_column_width_fluid * $columns) + (($grid_column_margin_fluid * 2) * ($columns - 1))) * 100) / $grid_row_width_fluid)